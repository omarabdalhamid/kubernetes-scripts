apiVersion: v1
kind: Pod
metadata:
  name: nginx-pod
spec:
  containers:
  - name: nginx-pod
    image: nginx:1.7.9
    ports:
    - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-pod
  labels:
   app-svc: nginx-pod
spec:
   type: LoadBalancer
   ports:
   - port: 8089
     nodePort: 31001
     name: http-8089
     targetPort: 80
   selector:
     app: nginx-pod
